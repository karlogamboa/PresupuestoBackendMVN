<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 
          http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>lambda-layer</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    
    <dependencySets>
        <dependencySet>
            <outputDirectory>java/lib</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <!-- Solo incluye lo esencial para tu Lambda -->
                <include>software.amazon.awssdk:dynamodb*</include>
                <include>software.amazon.awssdk:ses*</include>
                <include>org.slf4j:*</include>
                <include>com.opencsv:*</include>
                <include>com.fasterxml.jackson.core:*</include>
                <include>com.fasterxml.jackson.databind:*</include>
                <!-- Elimina starters de Spring Boot, POI, JPA, etc. si no son requeridos en Lambda -->
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>