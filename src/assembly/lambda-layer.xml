<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 
          http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>lambda-layer</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    
    <dependencySets>
        <dependencySet>
            <outputDirectory>java/lib</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <includes>
                <!-- AWS SDK Core y servicios -->
                <include>software.amazon.awssdk:*</include>
                <!-- Spring Cloud AWS Parameter Store -->
                <include>io.awspring.cloud:*</include>
                <!-- Logging y JSON -->
                <include>org.slf4j:*</include>
                <include>com.fasterxml.jackson.core:*</include>
                <include>com.fasterxml.jackson.databind:*</include>
                <!-- CSV Processing -->
                <include>com.opencsv:*</include>
                <!-- Spring Boot y Security esenciales -->
                <include>org.springframework.boot:spring-boot-starter-web</include>
                <include>org.springframework.boot:spring-boot-starter-security</include>
                <include>org.springframework.boot:spring-boot-starter-validation</include>
                <!-- JWT y Auth -->
                <include>com.auth0:java-jwt</include>
                <include>io.jsonwebtoken:jjwt</include>
            </includes>
            <excludes>
                <!-- Excluir dependencias pesadas del LAYER (pero mantenerlas en el JAR principal) -->
                <exclude>org.apache.poi:*</exclude>
                <exclude>org.opensaml:*</exclude>
                <exclude>net.shibboleth.utilities:*</exclude>
                <exclude>org.springframework.security:spring-security-saml2-service-provider</exclude>
                <exclude>org.springframework.boot:spring-boot-starter-data-jpa</exclude>
                <exclude>org.hibernate:*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>